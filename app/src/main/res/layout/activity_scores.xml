<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pclg.topquiz.controller.MainActivity">

    <TextView
        android:id="@+id/activity_scores_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="Les meilleurs scores"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="0dp"></TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/runLabel"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Firstname"
                android:textColor="#254854" />

            <TextView
                android:id="@+id/hitLabel"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/activity_scores_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="Let's play"/>


    <Button
        android:id="@+id/activity_scores_main_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="Back"/>

</LinearLayout>